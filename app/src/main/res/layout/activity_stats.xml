<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.osharifali.trueshoe.StatsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foot Height (inches) : "
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/fWidth" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foot Width (inches): "
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="165dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/meas"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/fHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/fWidth" />

    <TextView
        android:id="@+id/fWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="165dp"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Men's Size"
        android:textSize="25sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Women's Size"
        android:textSize="25sp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/mSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp"
        android:layout_above="@+id/textv"
        android:layout_alignStart="@+id/fHeight" />

    <TextView
        android:id="@+id/wSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/textv"
        android:layout_alignBottom="@+id/textv"
        android:layout_alignStart="@+id/mSize" />

    <TextView
        android:id="@+id/meas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mSize"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:gravity="clip_horizontal"
        android:text="Your Measurements Are In!!!"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
